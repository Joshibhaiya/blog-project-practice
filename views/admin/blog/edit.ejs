<%- include('../../header.ejs') %>



<!-- hero section start -->
<div class="container-fluid" style="margin-top: 200px; margin-bottom: 300px;">
    <div class="row">
      <%- include('../sidebar.ejs') %>
        <div class="col-md-9">
            <h1><b>BLOG VIEW</b></h1>
            
            <!-- <button
                type="button"
                class="btn btn-primary"
