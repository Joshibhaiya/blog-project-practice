                ADD blog</button> -->
           <!---------- edit form start ------>
           <form action="/blogupdate/<%= d._id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="">Category Name</label>
              <input
                type="text"
                name="category"
                class="form-control"
                value="<%= d.cname %>"
              />
              <label for="">Title</label>
              <input
                type="text"
                name="title"
                class="form-control"
                value="<%= d.title %>"
              />
              <label for="">Description</label>
              <textarea
                name="description"
                id=""
                cols="30"
                rows="10"
                class="form-control"
              >
<%= d.description %></textarea
              >
              <label for="">Image</label>
              <input type="file" name="image" class="form-control">
              <img src="<%= d.image.url %>" alt="" width="100px">
            </div> 

            <button type="submit" class="btn btn-info">UP DATE</button>
          </form>
          <!---------- edit form end ------>
        </div>
    </div>

  </div>
