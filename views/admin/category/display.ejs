<%- include('../../header.ejs') %>



<!-- hero section start -->
<div class="container-fluid" style="margin-top: 200px; margin-bottom: 300px;">
    <div class="row">
      <%- include('../sidebar.ejs') %>
        <div class="col-md-9">
            <h1><b>Category</b></h1>
            
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal" data-bs-target="#aa"
                style="margin: 20px 0px;">
                ADD CATEGORY</button>
           <table class="table table-bordered table-sm">
            <thead>
              <tr>
                <th>#ID</th>
                <th>Cname</th>
                <th>Action</th>
              </tr>
              <tr>
                <% d.forEach((item)=>{%>
                  <tr>
                    <td><%= item._id %></td>
                    <td><%= item.cname %></td>
                    <td>
                      <a href="/categoryview/<%= item._id %>" class="btn btn-info">view</a>
                      <a href="/categoryEdit/<%= item._id %>" class="btn btn-success">edit</a>
                      <a href="/categoryDelete/<%= item._id %>" class="btn btn-danger">delete</a>
                    </td>
                  </tr>
                <%})%>
              </tr>
            </thead>
            
           </table> 
        </div>
    </div>

  </div>
  <!-- hero section is end-->

<!--post  Modal -->
<div
  class="modal fade"
  id="aa"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ADD CATEGORY</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
      <form action="/categoryinsert" method="post">
        <div class="form-group">
          <label for="">Category name</label>
          <input type="text" name="categoryname" class="form-control">
        <button type="submit" class="btn btn-info">submit</button>
      </form>
    </div>
  </div>
</div>


<%- include('../../footer.ejs') %>